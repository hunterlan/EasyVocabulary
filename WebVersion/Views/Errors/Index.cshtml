

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/Error.css" />
    <title>Index</title>
</head>
<body>
    <div class="Article">
        <p>Error!</p>
    </div>
    <div class="ContentError">
        <img src="~/Content/Icons/HttpError.png" width="256" height="256" />
        <p>@ViewBag.TextError</p>
        @if (Session["User"] != null)
        {
            <a href='@Url.Action("Index", "Vocabularies")'>
                <button>Go back</button>
            </a>
        }
        else
        {
            <a href='@Url.Action("Index", "Start")'>
                <button>Go back</button>
            </a>
        }
    </div>
</body>
</html>
