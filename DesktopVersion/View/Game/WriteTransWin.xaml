<Window x:Class="DesktopVersion.WriteTransWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopVersion"
        mc:Ignorable="d"
        Title="WriteTransWin" Height="300" Width="400" Foreground="White" Background="#FF76B852">
    <Grid>
        <TextBlock Name="ToTranslate" HorizontalAlignment="Center" Margin="0,81,0,0" FontSize="14" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBox Name="Translator" HorizontalAlignment="Center" Height="23" Margin="0,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" KeyUp="Translator_KeyUp"/>
        <Button Name="Submit" Content="Submit" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="75" Click="Submit_Click"/>

    </Grid>
</Window>
