<Window x:Class="DesktopVersion.AddForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopVersion"
        mc:Ignorable="d"
        Title="Add row" Height="300" Width="400" Foreground="White" Background="#FF76B852">
    <StackPanel Margin="20">
        <TextBlock Text="EasyVocabulary" HorizontalAlignment="Center" FontSize="18"/>
        <Separator Background="White" Foreground="White"></Separator>
        <Label HorizontalAlignment="Left" Foreground="White" Content="Foreign word"/>
        <TextBox x:Name="ForeignBox" Width="400" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="18"/>
        <Label HorizontalAlignment="Left" Foreground="White" Content="Transcription (optionally)"/>
        <TextBox x:Name="TransBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" FontSize="18" Width="400"/>
        <Label Foreground="White" Content="Local word"/>
        <TextBox x:Name="LocalBox" HorizontalAlignment="Left" FontSize="18" TextWrapping="Wrap" Text="" Width="400"/>
        <Button x:Name="AddRow" Content="Add word" FontSize="14" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="AddRow_Click"/>
    </StackPanel>
</Window>
