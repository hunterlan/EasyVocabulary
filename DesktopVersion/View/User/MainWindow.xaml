<Window x:Class="DesktopVersion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopVersion"
        mc:Ignorable="d"
        Title="EasyVocabulary" Height="240" Width="320">
    <Grid Background="#FF76B852">
        <TextBlock Text="EasyVocabulary" HorizontalAlignment="Center" Margin="0, 10, 0, 0" Foreground="White" FontSize="18"/>
        <Button Content="Log In" HorizontalAlignment="Left" Margin="40,80,0,0" VerticalAlignment="Center" Width="75" Click="Button_Click" BorderBrush="{x:Null}" Background="White"/>
        <TextBox x:Name="BoxLogin" HorizontalAlignment="Left" Height="23" Margin="40,0,0,90" TextWrapping="Wrap" VerticalAlignment="Center" Width="230" BorderBrush="{x:Null}"/>
        <PasswordBox x:Name="BoxPassword" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Width="230" Height="23" BorderBrush="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,140,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="127" FontFamily="Segoe UI">
            <Hyperlink NavigateUri="1" Click="Hyperlink_Click" Foreground="White">Don't have an account?</Hyperlink>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="130,80,0,0" TextWrapping="Wrap" Text="Forget password?" VerticalAlignment="Center" Width="127" Foreground="White"/>
        <Separator HorizontalAlignment="Left" Height="115" Background="White" Foreground="White" Margin="43,-17,0,0" VerticalAlignment="Top" Width="226"/>

    </Grid>
</Window>
