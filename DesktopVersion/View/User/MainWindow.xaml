<Window x:Class="DesktopVersion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasyVocabulary" Height="240" Width="320" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" BorderBrush="White" BorderThickness="1" WindowState="Minimized">
    <Grid Background="#FF76B852">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="284*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="EasyVocabulary" HorizontalAlignment="Center" Margin="95,10,66.5,0" Foreground="White" FontSize="18"/>
        <Button Name="SignIn" Content="Log in" HorizontalAlignment="Left" Margin="40,135,0,55" VerticalAlignment="Center" Width="75" Click="Button_Click" BorderBrush="{x:Null}" Background="White"/>
        <TextBox x:Name="BoxLogin" HorizontalAlignment="Left" Height="24" Margin="40,48,0,138" TextWrapping="Wrap" VerticalAlignment="Center" Width="230" BorderBrush="{x:Null}"/>
        <PasswordBox x:Name="BoxPassword" HorizontalAlignment="Left" Margin="40,94,0,94" VerticalAlignment="Center" Width="230" Height="22" BorderBrush="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,167,0,27" TextWrapping="Wrap" VerticalAlignment="Center" Width="127" FontFamily="Segoe UI">
            <Hyperlink NavigateUri="1" Click="Hyperlink_Click" Foreground="White">Don't have an account?</Hyperlink>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="130,137,0,57" TextWrapping="Wrap" VerticalAlignment="Center" Width="127" Foreground="White">
            <Hyperlink NavigateUri="1" Foreground="White" Click="Hyperlink_Click_1">Forget password?</Hyperlink>
        </TextBlock>
        <Separator HorizontalAlignment="Left" Height="115" Background="White" Foreground="White" Margin="43,-17,0,0" VerticalAlignment="Top" Width="226"/>
    </Grid>
</Window>
