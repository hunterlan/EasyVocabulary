<Window x:Class="DesktopVersion.RemindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopVersion"
        mc:Ignorable="d"
        Title="Restore account" Height="175" Width="250" Foreground="White" Background="#FF76B852">
    <StackPanel>
        <TextBlock Text="EasyVocabulary" HorizontalAlignment="Center" FontSize="18"/>
        <Separator Background="White" Foreground="White"></Separator>
        <Label Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="White" Content="Enter the email of account"/>
        <TextBox x:Name="EmailBox" Width="200" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="Restore" Content="Restore" FontSize="14" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Restore_Click"/>
    </StackPanel>
</Window>
